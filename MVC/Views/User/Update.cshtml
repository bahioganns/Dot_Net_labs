@{
    ViewData["Title"] = "Обновление данных пользователя";
}

@{
   var User = (UserDTO)ViewData["User"];
}

<h2>Обновление данных пользователя #@User.Id</h2>

<form class="w-50" action="/User/UpdateAPI/@User.Id" method="POST">
  <div class="form-group">
    <label for="Email">Email</label>
    <input name="email" type="email" class="form-control" id="email" placeholder="Enter email" value="@User.Email">
  </div>
  <div class="form-group">
    <label for="Desctiption">Описание</label>
    <input name="description" type="text" class="form-control" id="desctiption" placeholder="Description" value="@User.Description">
  </div>
  <button type="submit" class="btn btn-primary">Изменить</button>
</form>
