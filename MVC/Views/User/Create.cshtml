@{
    ViewData["Title"] = "Создание нового пользователя";
}

<h2>Создание нового пользователя</h2>

<form class="w-50" action="/User/CreateAPI" method="POST">
  <div class="form-group">
    <label for="Email">Email</label>
    <input name="email" type="email" class="form-control" id="email" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="Desctiption">Описание</label>
    <input name="description" type="text" class="form-control" id="desctiption" placeholder="Description">
  </div>
  <button type="submit" class="btn btn-primary">Создать</button>
</form>
